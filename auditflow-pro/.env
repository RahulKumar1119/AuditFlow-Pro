# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCOUNT_ID=<your-account-id>
S3_DOCUMENT_BUCKET=auditflow-documents-prod

# DynamoDB Tables
DYNAMODB_DOCUMENTS_TABLE=AuditFlow-Documents
DYNAMODB_AUDIT_RECORDS_TABLE=AuditFlow-AuditRecords

# Application Thresholds & Timeouts
CONFIDENCE_THRESHOLD=0.80
PROCESSING_TIMEOUT_SECONDS=300
MAX_CONCURRENT_PROCESSING=10
MAX_FILE_SIZE_MB=50
MAX_DOCUMENT_PAGES=100

# Risk Alerting Thresholds
CRITICAL_RISK_THRESHOLD=80
HIGH_RISK_THRESHOLD=50
MEDIUM_RISK_THRESHOLD=25

# Retry Policies
MAX_RETRIES=3
RETRY_BACKOFF_RATE=2.0
RETRY_INTERVALS=5,15,45

# Validation Thresholds
NAME_EDIT_DISTANCE_THRESHOLD=2
INCOME_DISCREPANCY_THRESHOLD_PERCENT=5
INCOME_HIGH_DISCREPANCY_THRESHOLD_PERCENT=10

# Data Retention (in days)
ARCHIVE_AFTER_DAYS=90
DELETE_AFTER_DAYS=2555

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
ACCOUNT_LOCKOUT_MINUTES=15
MAX_LOGIN_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=365
